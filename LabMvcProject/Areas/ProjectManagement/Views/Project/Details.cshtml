@model Project

<h2>Project Details</h2>
<h3>Comments</h3>

<div id="comments-container"></div>

<textarea id="commentInput" class="form-control mt-3"></textarea>

<button id="sendComment" class="btn btn-primary mt-2">Add Comment</button>

@section Scripts {
    <script src="~/js/projectComments.js"></script>
    <script>
        loadComments(@Model.ProjectId);
    </script>
}


<div class="card p-3">

    <div>
        @Html.DisplayFor(m => m.Name)
    </div>

    <div class="mt-2">
        @Html.DisplayFor(m => m.Description)
    </div>

    <dl class="row mt-3">
        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.StartDate)</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.EndDate)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

</div>
