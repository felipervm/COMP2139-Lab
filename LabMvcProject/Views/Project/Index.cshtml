@model List<Project>

@{
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

<a asp-action="Create" class="btn btn-primary">Create New Project</a>

<form asp-controller="ProjectTask" asp-action="Index" method="get" class="mb-3">
    <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
    <input type="text" name="term" value="@ViewBag.SearchTerm" placeholder="Search tasks..." class="form-control w-50 d-inline" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if ((ViewBag.Searched ?? false) && !Model.Any())
{
    <p>No projects found matching your search.</p>
}



@if (Model?.Any() == true)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.ProjectId</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger btn-sm">Delete</a>

                    <!-- âœ… View Tasks Button -->
                    <a asp-controller="ProjectTask"
                    asp-action="Index"
                    asp-route-projectId="@project.ProjectId"
                    class="btn btn-outline-info btn-sm">Tasks</a>
                </td>

            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No projects available.</p>
}